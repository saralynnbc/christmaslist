<%= form_for @ward, url: (@ward.persisted? ? ward_path(@ward) : wards_path), html: {class: 'form-horizontal'} do |f| %>
    <%= render partial: 'share/form_error_messages', object: @ward %>

    <%= input_field_for f, :first_name %>
    <%= input_field_for f, :last_name %>
    <%= select_field_for f, :gender, Person.genders.keys.collect{|g| [g.titleize, g]} %>
    <%= collection_field_for f, :group_ids, current_person.groups, :id, :name, label_text: 'Groups', html: {class: 'selectpicker', multiple: 'multiple'} %>

    <%= form_actions do
        f.submit class: 'btn btn-primary'
    end %>
<% end %>
