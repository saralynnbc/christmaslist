<% if @groups.length < 1 %>
<div class="jumbotron">
    <h1>Groups</h1>
    <p>You can share your list with groups of people - like a family or your coworkers.</p>
    <p><%= link_to 'Create one!', new_group_path, class: "btn btn-primary btn-lg" %></p>
</div>
<% else %>
<%= link_to 'New Group', new_group_path, class: "btn btn-default" %>
<table class="table">
    <% @groups.each do |group| %>
    <tr>
        <td><%= link_to group.name, group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) if group.editable_by?(current_person) %></td>
    </tr>
    <% end %>
</table>
<% end %>
